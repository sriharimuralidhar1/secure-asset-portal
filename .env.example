# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=3000
HTTP_PORT=8080

# HTTPS Configuration (for WebAuthn mobile compatibility)
ENABLE_HTTPS=true
FORCE_HTTPS=true
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Frontend Configuration
FRONTEND_URL=https://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/secure_asset_portal
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_asset_portal
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# Redis Configuration (for session storage and cross-device passkey sessions)
REDIS_URL=redis://localhost:6379

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME=Secure Asset Portal
TWO_FACTOR_ISSUER=Secure Asset Portal

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=https://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External Services (if needed)
# ENCRYPTION_SERVICE_URL=https://api.encryption-service.com
# AUDIT_SERVICE_URL=https://api.audit-service.com

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000

# Development/Testing
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs
